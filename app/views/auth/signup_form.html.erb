<%= form_with model: @user, url: signup_path do |f| %>
   <div class="mb-3">
     <%= f.text_field 'name', class: 'form-control', placeholder: 'Name' %>
     <span class="text-danger"> <%= @user.errors[:name][0] %></span>
   </div>
   <div class="mb-3">
      <%= f.email_field 'email', class: 'form-control', placeholder: 'Email' %>
      <span class="text-danger"> <%= @user.errors[:email][0] %></span>
   </div>
   <div class="mb-3">
      <%= f.password_field 'password', class: 'form-control', placeholder: 'Password' %>
      <span class="text-danger"> <%= @user.errors[:password][0] %></span>
   </div>
   <div class="mb-3">
      <%= f.password_field 'password_confirmation', class: 'form-control', placeholder: 'Password Confirmation' %>
      <span class="text-danger"> <%= @user.errors[:password_confirmation][0] %></span>
   </div>
   <button type="submit" class="btn btn-primary">Submit</button>
 <% end %>